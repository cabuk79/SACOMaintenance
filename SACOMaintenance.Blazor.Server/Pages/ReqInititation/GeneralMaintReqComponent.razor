@using SACOMaintenance.Common.ModelDB
@using SACOMaintenance.DataAccess.Interfaces
@using SACOMaintenance.ViewModel.Interfaces
@*@inject IGeneralRequest GeneralRequestDataProvider*@
@inject IGeneralMaintRequestViewModel GeneralViewModel
@using SACOMaintenance.Blazor.Server.Components
@inject NavigationManager NavigationManager
@using Microsoft.AspNetCore.SignalR.Client 

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <RadzenFieldset Text="Control Measures Taken" Style="width: 100%; border-color: black">
               <!-- Bind this to the relvant model field -->
               <RadzenHtmlEditor @bind-Value="GeneralViewModel.genralRequestInfo.ControlMeasuresTaken" Style="height: 500px; border-color: black" Name="DetailsHTML">
                                <RadzenHtmlEditorUndo />
                                <RadzenHtmlEditorRedo />
                                <RadzenHtmlEditorSeparator />
                                <RadzenHtmlEditorBold />
                                <RadzenHtmlEditorItalic />
                                <RadzenHtmlEditorUnderline />
                                <RadzenHtmlEditorSeparator />
                                <RadzenHtmlEditorColor />
                                <RadzenHtmlEditorUnorderedList />
                            </RadzenHtmlEditor>
            </RadzenFieldset>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <RadzenFieldset Text="PPE Required" Style="width: 100%; border-color: black" AllowCollapse="true">
                @if(GeneralViewModel.genralRequestInfo.WorkCompletedSignOffUserId == "" || GeneralViewModel.genralRequestInfo.WorkCompletedSignOffUserId == null)
                {
                    <SquareCheckBox Items="GeneralViewModel.ppeList" Context="PPE"
                                    @bind-SelectedItems="GeneralViewModel.PPEItemsSelected"> <!-- Set the diabled here through a variable -->
                        <ItemTemplate>
                            <div class="row">
                                <div class="col-lg-12">
                                    <img src="@PPE.IconFileLocation" alt="@PPE.PPEName" width="60" height="60" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    @PPE.PPEName
                                </div>
                            </div>
                        </ItemTemplate>
                    </SquareCheckBox>               
                }
                else
                {
                    <SquareCheckBox Items="GeneralViewModel.ppeList" Context="PPE"
                                    @bind-SelectedItems="GeneralViewModel.PPEItemsSelected" Disabled="disabled"> <!-- Set the diabled here through a variable -->
                        <ItemTemplate>
                            <div class="row">
                                <div class="col-lg-12">
                                    <img src="@PPE.IconFileLocation" alt="@PPE.PPEName" width="60" height="60" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    @PPE.PPEName
                                </div>
                            </div>
                        </ItemTemplate>
                    </SquareCheckBox>  
                }
            </RadzenFieldset>
        </div>
    </div>

    <RadzenButton Click="seeppe" Text="seepee Button"></RadzenButton>

    @foreach (var item in maintReq.PPEEquipment)
    {
        <span>@item.Id;</span>
        <span>@item.PPEName;</span>
        <span>@item.MaintRequestInitiations.Count;</span>
    }

    <div class="row">
        <div class="col-lg-12">
            @if (GeneralViewModel.AuthrazationReq == null || GeneralViewModel.AuthrazationReq.Satus == null && GeneralViewModel.AuthrazationReq.Satus != "Approved")
            {             
                <RadzenFieldset Text="Authority to Start Work" Style="width: 100%; border-color: black">
                    <RadzenDropDown AllowClear="true" TValue="string" Style="width: 40%; border-color: black"
                                    FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                                    @bind-value="@GeneralViewModel.UserAuthIdStartWork"
                                    Data="@GeneralViewModel.Users" TextProperty="FullName" ValueProperty="Id">
                        <Template>
                            <div class="row">
                                <div class="col-lg-1">
                                    <img class="avatar-circle" src="@((context as User).AvatarLocation)" width="20" height="20" />
                                </div>
                                <div class="co-lg-11">
                                    @((context as User).FullName)
                                </div>
                            </div>
                        </Template>
                    </RadzenDropDown>
                    <RadzenLabel Text="Choose Person to Authorise"></RadzenLabel>
                    <!-- Saving the General Request -->
                    <RadzenButton Text="Request and Save Request Data" Click="@StartWorkRequest" Icon="Save" @oninput="IsReadOnlyChanged"
                                  Style="margin-bottom: 20px; width: auto"></RadzenButton>
                </RadzenFieldset>
            }
            else
            {
                <RadzenFieldset Text="Authority to Start Work" Style="width: 100%; border-color: black">
                    <div class="row">
                        <div class="col-lg-12">
                            @{
                                foreach (var item in GeneralViewModel.Users)
                                {
                                    if (item.Id == GeneralViewModel.UserAuthIdStartWork)
                                    {
                                        name = item.FirstName + " " + item.LastName;
                                    }
                                }
                            }
                            @if (GeneralViewModel.AuthrazationReq.Satus == "Requested")
                            {
                                <p>
                                    This request approval to work has been @GeneralViewModel.AuthrazationReq.Satus
                                    and is waiting approval from @name on the @GeneralViewModel.AuthrazationReq.RequestedDate.ToLongDateString() at
                                    @GeneralViewModel.AuthrazationReq.RequestedDate.ToLongTimeString()
                                </p>
                            }
                            else if (GeneralViewModel.AuthrazationReq.Satus == "Approved")
                            {
                                <p>
                                    This request approval to work has been @GeneralViewModel.AuthrazationReq.Satus
                                    by @name onthe ***get approval date***
                                </p>
                            }
                            else if (GeneralViewModel.AuthrazationReq.Satus == "Rejected")
                            {
                                <p>
                                    This request approval to work has been @GeneralViewModel.AuthrazationReq.Satus
                                    by @name onthe ***get approval date*** and the reason or comment for this is:

                                </p>
                            }

                        </div>
                    </div>
                    @if (GeneralViewModel.AuthrazationReq.Satus == "Requested" || GeneralViewModel.AuthrazationReq.Satus == "")
                    {
                        <div class="row">
                            <div class="col-lg-3"><RadzenButton Text="Chase Approval"></RadzenButton></div>
                            <div class="col-lg-4"><RadzenButton Text="Choose Another Person for Approval" Click="@DeleteAuthroization"></RadzenButton></div>
                        </div>
                    }

                </RadzenFieldset>
            }
        </div>
    </div>
</div>

@if (GeneralViewModel.AuthrazationReq.Satus == "Approved" && GeneralViewModel.AuthrazationReq != null && GeneralViewModel.genralRequestInfo != null)
{
    <div class="row">
        <div class="col-lg-12">
            <RadzenFieldset Text="Completion of the Works">
                <div class="row">
                    <div class="col-lg-12">
                        <RadzenLabel Text="Details of the work completed"></RadzenLabel>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        @if(@GeneralViewModel.genralRequestInfo.DetailOfWorkCompeltedUserId != "")
                        {
                            <RadzenTextArea @bind-Value="GeneralViewModel.genralRequestInfo.DetailOfWorkCompleted" Style="width: 100%; border-color: black" ReadOnly="true"></RadzenTextArea>                            
                        }
                        else
                        {
                            <RadzenTextArea @bind-Value="GeneralViewModel.genralRequestInfo.DetailOfWorkCompleted" Style="width: 100%; border-color: black"></RadzenTextArea>                            
                        }
                    </div>
                </div>
                <div class="row"><!-- Sign off by the maintenance user for work completed -->
                    <div class="col-lg-12">
                        @{
                            foreach (var item in GeneralViewModel.Users)
                            {
                                if (item.Id == GeneralViewModel.UserAuthIdStartWork)
                                {
                                    name = item.FirstName + " " + item.LastName;
                                }
                            }
                        }
                        @if (GeneralViewModel.CompletedAuth == null
                           || GeneralViewModel.CompletedAuth.Satus == null && GeneralViewModel.UserCompletedRequest == false)
                        {
                            <RadzenLabel Text="Select You Name"></RadzenLabel>
                            <RadzenDropDown AllowClear="true" TValue="string" Style="width: 40%; border-color: black"
                                            FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                                            @bind-value="@GeneralViewModel.MaintenanceUserCompletedId"
                                            Data="@GeneralViewModel.Users" TextProperty="FullName" ValueProperty="Id">
                                <Template>
                                    <div class="row">
                                        <div class="col-lg-1">
                                            <img class="avatar-circle" src="@((context as User).AvatarLocation)" width="20" height="20" />
                                        </div>
                                        <div class="co-lg-11">
                                            @((context as User).FullName)
                                        </div>
                                    </div>
                                </Template>
                            </RadzenDropDown>
                            <RadzenButton Text="Completed Request" Click="@SignOffWorkCompleted" Icon="save" @oninput="IsReadOnlyChanged"
                                          Style="margin-bottom: 20px; width: 200px"></RadzenButton>
                        }
                        else
                        {
                            <span>Work on the request has been completed.</span>
                        }

                    </div>
                </div>
            </RadzenFieldset>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            @if(@GeneralViewModel.genralRequestInfo.DetailOfWorkCompeltedUserId == "")
            {
                <RadzenFieldset Text="Sign Off Approval Details">
                    @*<div class="row">
                        <div class="col-lg-12">
                            <RadzenTextArea @bind-value="GeneralViewModel.genralRequestInfo.SignOffDetails" Style="width: 100%; border-color: black"></RadzenTextArea>
                        </div>
                    </div>*@
                    <div class="row">
                        <div class="col-lg-12">
                            <RadzenFieldset Text="Authority to Start Work" Style="width: 100%; border-color: black">
                                <RadzenDropDown AllowClear="true" TValue="string" Style="width: 40%; border-color: black"
                                            FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                                            @bind-value=@GeneralViewModel.genralRequestInfo.WorkCompletedSignOffUserId
                                            Data="@GeneralViewModel.Users" TextProperty="FullName" ValueProperty="Id">
                                <Template>
                                    <div class="row">
                                        <div class="col-lg-1">
                                            <img class="avatar-circle" src="@((context as User).AvatarLocation)" width="20" height="20" />
                                        </div>
                                        <div class="co-lg-11">
                                            @((context as User).FullName)
                                        </div>
                                    </div>
                                </Template>
                            </RadzenDropDown>
                            <RadzenLabel Text="Choose Person to Authorise"></RadzenLabel>
                            <!-- Change the click on event method to one that is relevant to the sign off -->
                             <RadzenButton Text="Request and Save Request Data" Click="@SignOffWorkRequest" Icon="Save" @oninput="IsReadOnlyChanged"
                                      Style="margin-bottom: 20px; width: 200px"></RadzenButton>
                        </RadzenFieldset>
                        </div>
                    </div>
                </RadzenFieldset>
            }
            else
            {
                <RadzenFieldset Text="Authority to Start Work" Style="width: 100%; border-color: black">
                    The request has been signed off by @GeneralViewModel.genralRequestInfo.WorkCompletedSignOffUserId
                </RadzenFieldset>
            }
        </div>
    </div>
    <div class="row">
        
    </div>

}
else
{
    <div class="row">
        <h1>You need approval to work</h1>
    </div>
}

