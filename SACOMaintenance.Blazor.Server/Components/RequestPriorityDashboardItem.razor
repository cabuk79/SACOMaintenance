
<div class="card text-white @color">
    <div class="card-body">
        <div class="RequestPriorityMain">
            <div class="requestPriorityCentre">
                <i class="@imageLocation fa-5x" />           
            </div>          
            <div class="requestPriorityRight">
                <h2>@text</h2>
                <h2>@count</h2>
            </div>            
        </div>  
    </div>
</div>


@code {

    [Parameter]
    public string imageLocation { get; set; }

    [Parameter]
    public string color { get; set; }

    [Parameter]
    public string text { get; set; }

    [Parameter]
    public int count { get; set; }


}
